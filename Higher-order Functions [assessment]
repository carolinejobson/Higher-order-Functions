const printNames = names => names.forEach(
    name => console.log(name));

const logTreeType = trees => trees.forEach(
    tree => console.log(tree.type));

const totalPoints = points => {
  let sum = 0
  points.forEach(point => sum += point);
  return sum
}

const buildSentence = words => {
  let string = ""
  words.forEach(word => string += `${word} `);
  return string;
}

const logPercentages = decimals => {
  decimals.forEach(decimal => console.log(`${decimal*100}%`));
}

module.exports = {
  printNames,
  logTreeType,
  totalPoints,
  buildSentence,
  logPercentages,
};